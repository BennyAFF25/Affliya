+            <span>{tab.label}</span>
+            {typeof tab.count === 'number' && (
+              <span
+                className={`inline-flex min-w-[1.5rem] justify-center rounded-full px-2 py-0.5 text-[11px] ${
+                  isActive ? 'bg-black/20 text-black' : 'bg-white/5 text-white/70'
+                }`}
+              >
+                {tab.count}
+              </span>
+            )}
+          </button>
